extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of album' name='title' required value=(undefined===album ? '' : album.title) )
    div.form-group
      label(for='artist') Artist:
      select#artist.form-control(name='artist' required)
        option(value='') --Please select an author--
        for artist in artists
            option(value=artist._id) #{artist.name}
    div.form-group
      label(for='summary') Summary:
      textarea#summary.form-control(placeholder='Summary' name='summary' required value=(undefined===album ? '' : album.summary))
    div.form-group
      label(for='upc') UPC:
      input#isbn.form-control(type='number', placeholder='UPC number must be 12 digits' min=100000000000 max=999999999999 name='upc'  required)
    div.form-group
      label Genre:
      select#genre.form-control(name='genre' required)
        option(value='') --Please select a genre--
        for genre in genres
            option(value=genre._id) #{genre.name}
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg