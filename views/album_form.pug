extends layout

block content
  h1= title

  form(method='POST' enctype="mulitpart/form-data")
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of album' name='title' required value=(undefined===album ? '' : album.title) )
    div.form-group
      label(for='artist') Artist:
      select#artist.form-control(name='artist' required value=(undefined===album ? '' : album.genre ) )
        option(value='') --Please select an author--
        for artist in artists
            option(value=artist._id) #{artist.name}
    div.form-group
      label(for='summary') Summary:
      textarea#summary.form-control(placeholder='Summary' name='summary' required value=(undefined===album ? '' : album.summary ))
    div.form-group
      label Genre:
      select#genre.form-control(name='genre' required)
        option(value='') --Please select a genre--
        for genre in genres
            option(value=genre._id) #{genre.name}
    div.form-group
      label(for='upc') UPC Number:
      input#isbn.form-control(type='number', placeholder='UPC number must be 12 digits' min=100000000000 max=999999999999 name='upc'  required)
    div.form-group
      label(for='price') Price:
      input#isbn.form-control(type='number', placeholder='123' min=1 name='price'  required)
    div.form-group
      label(for='total_items') Total Items:
      input#isbn.form-control(type='number', placeholder='123' min=1 name='total_items'  required)
    div.form-group
      label(for='image') Upload Image:
      input#title.form-control(type='file' name='image' )
    button.btn.btn-primary(type='submit') Submit
    a(href=album.url) Cancel

  if errors
    ul
      for error in errors
        li!= error.msg